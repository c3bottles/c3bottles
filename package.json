{
  "name": "c3bottles",
  "version": "0.0.0",
  "description": " Bottle drop and collection management system for chaos events",
  "scripts": {
    "python:dev": "watch \"./manage.py run\" c3bottles",
    "refresh:babel": "venv/bin/pybabel extract -F translations/babel.cfg -k lazy_gettext -w 80 -o translations/messages.pot . && venv/bin/pybabel update -i translations/messages.pot -w 80 -d translations/",
    "prebuild": "mkdir -p static/lib/js/ static/lib/css/ static/lib/fonts/",
    "prebuild:js": "yarn run prebuild && eslint js/**.js",
    "build:js": "NODE_ENV=production webpack",
    "build:js:watch": "webpack --watch",
    "build:js:debug": "webpack",
    "prebuild:css": "yarn run prebuild",
    "build:css": "cp node_modules/bootstrap/dist/css/* node_modules/bootstrap-select/dist/css/* node_modules/datatables-bootstrap3-plugin/media/css/*.css node_modules/leaflet/dist/leaflet.css static/lib/css/",
    "prebuild:fonts": "yarn run prebuild",
    "build:babel": "venv/bin/pybabel compile -d translations/ && venv/bin/python translations/translate-js.py",
    "build:fonts": "cp -r node_modules/bootstrap/dist/fonts/* static/lib/fonts/",
    "build:deps": "npm-run-all build:js build:css build:fonts",
    "build": "npm-run-all build:babel build:deps"
  },
  "repository": "c3bottles/c3bottles",
  "author": "MichiK <michik@michik.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/c3bottles/c3bottles/issues"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "bootstrap": "^3.3.7",
    "bootstrap-select": "^1.13.3",
    "chart.js": "^2.7.2",
    "datatables-bootstrap3-plugin": "0.5.0",
    "datatables.net": "^1.10.16",
    "jquery": "^3.3.1",
    "leaflet": "^1.3.1"
  },
  "jshintConfig": {
    "curly": true,
    "latedef": "nofunc",
    "unused": true
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.19.1",
    "eslint-config-joblift": "^1.3.0",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.8.2",
    "eslint-plugin-sort-imports-es6-autofix": "^0.3.0",
    "imports-loader": "^0.8.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.12.1",
    "watch": "^1.0.2",
    "webpack": "^3.10.0"
  }
}
